    <!-- end 开启注解权限验证 -->
	<!-- spring提供的基于url的权限过滤 -->
	<bean id="shiroSecurityFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" />
		<property name="loginUrl" value="/login" />
		<property name="successUrl" value="/" />
		<property name="unauthorizedUrl" value="/seed/static/unauthorized.html" />
		<property name="filterChainDefinitions">
			<value>
				/ = authc
				/druid/** = anon<!-- druid相关资源不是我们自己写的，没法在url上带sessionid -->
				/static/** = anon
				/forward/** = anon
				/** = authc,perms
				<!-- /views/**= authc,roles[admin] -->
				<!-- /users= authc,perms[user:create] -->
			</value>
		</property>

		<property name="filters">
			<map>
				<entry key="authc" value-ref="loginFilter">
					<!-- 认证过滤 -->
					<!-- <bean class="cn.howso.deeplan.perm.filter.LoginFilter"></bean> -->
				</entry>
				<!-- 角色过滤 -->
				<!-- <entry key="roles"> <bean class="cn.howso.common.system.authorization.filter.RoleFilter"></bean> 
					</entry> -->
				<!-- 权限过滤 -->
				<entry key="perms" value-ref="permFilter">
					<!-- <bean class="cn.howso.deeplan.perm.filter.PermissionFilter"></bean> -->
				</entry>
			</map>
		</property>
	</bean>

	<!-- shiro的核心之一 安全管理器 -->
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="myRealm"></property>
 		<property name="cacheManager" ref="redisCacheManager" />
